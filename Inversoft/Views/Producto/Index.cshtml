@model IEnumerable<Inversoft.Models.Negocio.Producto>
@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container py-4">
    <h2 class="mb-4">Lista de Productos</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <a asp-action="Crear" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Nuevo Producto
    </a>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center fs-4">No hay resultados</td>
                    </tr>
                }
                else
                {
                    foreach (var producto in Model)
                    {
                        <tr>
                            <td>@producto.Id</td>
                            <td>@producto.Nombre</td>
                            <td>@producto.Descripcion</td>
                            <td>@producto.Precio.ToString("C")</td>
                            <td>@producto.Cantidad</td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@producto.Id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>